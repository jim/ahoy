{
  "manifest_version": 2,
  "name": "Ahoy",
  "version": "0.1",

  "description": "Adds a browser action icon to the toolbar. When clicked, a link will be added to the page for every anchor to make is easy to link to specific locations in the page.",
  "homepage_url": "https://github.com/jim/ahoy",

  "permissions": [
    "tabs",
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icons/anchor-128.png",
    "default_title": "Add Anchors"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "icons": {
    "48": "icons/anchor-48.png",
    "128": "icons/anchor-128.png"
  },

  "web_accessible_resources": [ 
    "content_script.js"
  ]
}

